{
    "compilerOptions": {
      "incremental": true,
      "target": "es2019",
      "module": "esnext",  // Modern ES module system
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "sourceMap": true,
      "lib": ["dom", "dom.iterable", "es2017"],
      "allowJs": true,
      "outDir": "./build",  // Specify the output directory

      "types": []
    },
    "watchOptions": {
      "watchFile": "useFsEvents",
      "watchDirectory": "useFsEvents",
      "fallbackPolling": "dynamicPriority"
    },
    "include": [
      "../js-libs/almond.js",
      "../js-libs/cbor.js",
      "../js-libs/ziplib/*.js",
      "../js-libs/jquery.min.js",
      "../js-libs/bootstrap-notify.js",
      "../js-libs/wasm-feature-detect.js",
      "./**/*"
    ],
    "exclude": ["build", "node_modules", "coverage"]
  }
  