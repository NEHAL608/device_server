{
    "compilerOptions": {
        "incremental": true,
        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "../build/server",
        "strict": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
        "@ei/common": ["../../common/src"]
    }
    },
    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority"
    },
    "include": [
        "**/*",
        "../shared/**/*"
    ],
    "references": [
        { "path": "../../common" }
    ]
}
